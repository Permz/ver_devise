<h2>Questions</h2>

<table class="table">
  <thead>
  <tr>
    <th>Number</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 
  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.title %></td>
      <td><%= link_to '表示', question %></td>
      <td><%= link_to '編集', edit_question_path(question) %></td>
      <td><%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="container text-center">
  <h4><%= link_to '新規質問投稿', new_question_path %></h4>
</div>
