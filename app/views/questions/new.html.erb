<h2>新規質問投稿</h2>

<% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
  <!-- ユーザーがログインしていた時の処理 -->
  <div class="container text-right">
    <h3> <%= current_user.name %> さんがログインしています </h3>
    <h3> メールアドレス： <%= current_user.email %> </h3>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->
  </div>
<% else %>
  <!-- ユーザーがログインしていなかった時の処理 -->
  <h3> 現在ログインしていません </h3>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %> <!-- ログイン画面に移行する -->
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!-- 新規登録画面に移行する -->
<% end %>

<div class="container text-center">
  <%= form_for @question do |f| %>
    <div class="container">
      <div>
        <%= f.label :title,"質問タイトル" %>
        <%= f.text_field :title %>
      </div>
      <div>
        <%= f.label :index,"質問内容" %>
        <%= f.text_field :index %>
      </div>
      <div class="container">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
  <hr>
</div>